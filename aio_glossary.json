      "formula": null,
      "category": "Dynamics"
    },
    "strategic_micro_shift": {
      "definition": "Small targeted adjustment without coherence loss",
      "formula": null,
      "category": "Dynamics"
    }
  },
  "cost_resource_layer": {
    "transition_cost": {
      "definition": "Cost of moving between states",
      "formula": "C(x₁→x₂) = f(d, α, depth, LoA)",
      "category": "Economics"
    },
    "token": {
      "definition": "Comparable unit of transition cost",
      "formula": null,
      "category": "Economics"
    },
    "resource_capacity": {
      "symbol": "Rₜ",
      "definition": "Available energy, attention, emotion, time",
      "formula": null,
      "category": "Economics"
    },
    "alignment": {
      "symbol": "α",
      "definition": "Trajectory compatibility with field topology",
      "formula": "0 = organic, 1 = imposed",
      "category": "Economics"
    },
    "burn_rate": {
      "definition": "Resource consumption rate",
