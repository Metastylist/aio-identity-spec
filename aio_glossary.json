  "forecasting_layer": {
    "identity_forecasting": {
      "definition": "Modeling future identity states",
      "formula": "P(xₜ₊Δt | xₜ, history, LoA)",
      "category": "Forecasting"
    },
    "possible_futures": {
      "definition": "All theoretically reachable states",
      "formula": null,
      "category": "Forecasting"
